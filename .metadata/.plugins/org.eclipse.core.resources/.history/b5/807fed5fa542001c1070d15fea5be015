import java.util.Scanner;

public class ReverseAlternateCharacter 
{
	public String reverse(String stringName, int start , int end)
	{
		if(start == end)
		{
			return "";
		}
		String result = " ";
		for(int i = start; i <= end; i++)
		{
			result = stringName.charAt(i) + result;
		}
		return result;
	}
	public String reverseAlternateCharacter(String stringName , int k)
	{
